{
  "name": "thumnail-animator",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "dist": "electron-builder --publish=never",
    "release": "electron-builder --publish=always"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Thumbnail Animator - An Electron app for creating animated thumbnails",
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.thumnailanimator.app",
    "productName": "Thumbnail Animator",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "kevinggundersen",
      "repo": "thumnail-animator"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!electron-cache/**/*",
      "!dist/**/*",
      "!*.md"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
